<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/button_tuyama"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2B2B"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="73dp"
        android:layout_height="36dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="91dp"
        android:text="最低"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/today_temp_min"
        app:layout_constraintStart_toEndOf="@+id/today_weather_text"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button_bisei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="262dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#B8B239"
        android:text="美星天文台"
        android:textColor="#070101"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/button_ryuten"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.44" />

    <Button
        android:id="@+id/button_satuki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="262dp"
        android:layout_marginBottom="356dp"
        android:backgroundTint="#B8B239"
        android:text="美咲町立さつき天文台"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_ryuten" />

    <Button
        android:id="@+id/button_ryuten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="262dp"
        android:layout_marginBottom="75dp"
        android:backgroundTint="#B8B239"
        android:text="竜天天文台"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/button_satuki"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_bisei" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="159dp"
        android:layout_height="43dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="66dp"
        android:layout_marginBottom="247dp"
        android:text="現在の天気"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_satuki"
        app:layout_constraintVertical_bias="0.888" />

    <TextView
        android:id="@+id/today_weather_text"
        android:layout_width="122dp"
        android:layout_height="142dp"
        android:layout_marginStart="66dp"
        android:layout_marginBottom="70dp"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/today_temp_max"
        android:layout_width="86dp"
        android:layout_height="38dp"
        android:layout_marginTop="490dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="40dp"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/today_temp_min"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/today_temp_min"
        android:layout_width="86dp"
        android:layout_height="38dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="89dp"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="73dp"
        android:layout_height="36dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="154dp"
        android:text="最高"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/today_temp_max"
        app:layout_constraintStart_toEndOf="@+id/today_weather_text"
        app:layout_constraintTop_toBottomOf="@+id/button_satuki" />

</androidx.constraintlayout.widget.ConstraintLayout>